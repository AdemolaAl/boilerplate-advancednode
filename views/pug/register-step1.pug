html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Register
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Montserrat')
    link(rel='stylesheet', href='public/register1.css')
  body
  
    if flash.success
      .popup-cvr
        .popup
          div.close-popup-btn(onclick='hidePopup()', style='cursor:pointer') x
          p #{flash.success}
    else if flash.error
      .popup-cvr
        .popup(style='background-color:red')
          div.close-popup-btn(onclick='hidePopup()', style='cursor:pointer') x
          p #{flash.error}

    .body
      p.header2(style='padding-top: 80px;') Register to Revolution
      form(action="/register1", method="post") 
        .main
            .input-main
                p Email
                input(type='email', name='email')

            button(style='width: 100%;') Continue
            p(style='text-align: center; margin: 30px 0;') Or continue with
            button(style='background-color: white; color: black; width: 100%; border: 1px solid rgb(136, 136, 136);') Google
      p
        | Already signed up?
        a(href='/signin')  Sign in
    script(src="/public/signin.js")     