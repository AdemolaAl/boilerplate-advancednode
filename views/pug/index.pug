html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Revolution
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Montserrat')
    link(rel='stylesheet', href='public/style.css')
    script(src='https://kit.fontawesome.com/0b68ed503d.js', crossorigin='anonymous')

  body
    if flash.error
      .popup-cvr
        .popup(style='background-color:#E9D502')
          div.close-popup-btn(onclick='hidePopup()', style='cursor:pointer') x
          p #{flash.error}
    if flash.success
      .popup-cvr
        .popup
          div.close-popup-btn(onclick='hidePopup()', style='cursor:pointer') x
          p #{flash.success}
    .main-cvr
      .header-dark
        .header-cvr
          .name
            a(href="/") Revolution
          .second
            ul
              a(href="/product/Men")  Men
            ul
              a(href="/product/women")  Women
            ul Plain
          if user 
            .third1
              .profile-container
                if user.fileId
                  .profimg(style=`background-image: url('/images/${user.shortId}'); background-position: center; background-size: cover;`)
                else 
                  .profimg(style=`background-image: url('/pictures/user.jpg'); background-position: center; background-size: cover;`)

                .dropdown-menu
                  // Add your dropdown menu content here
                  div(onclick=`window.location.href='/profile'`, style='cursor:pointer') Profile
                  div Billing
                  div Order History
                  div Pending Order
                  // For example, you can add links or other elements
          else
            .third
              ul Search
              ul Help
      
      .mobile-header
        .header-cvr
          a(href="/") 
            .name Revolution
          .cvr1 
            a(href="/profile") 
              i.fa-regular.fa-user.fa-lg(style='margin-right: 20px;')
            a(href="/shoppingcart")   
              i.fa-solid.fa-bag-shopping.fa-xl(style='margin-right: 20px;')
            i.fa-solid.fa-bars.fa-xl(onclick='slidein()')
      
      .slidein
        <i class="fa-solid fa-xmark fa-xl" onclick='slideout()'></i>
        .slideincvr
          .cvr(onclick=`window.location.href='/product/Men'`)
            a Men
            i.fa-solid.fa-angle-right 
          .cvr(onclick=`window.location.href='/product/women'`)
            a Women
            i.fa-solid.fa-angle-right 
          .cvr(onclick=`window.location.href='/'`)
            a Plain
            i.fa-solid.fa-angle-right
            
        if user
          .slideincvr2.slideincvr
            <i class="fa-solid fa-user" style='margin-right:20px'></i>
            a(href='/profile') Profile
            br
            i.fa-solid.fa-bag-shopping(style='margin-right:20px')
            a(href='/shoppingcart') Cart
          
        else 
          p.bold-text(style='margin-top:80px; font-size:20px') Join us to get access to ultimate product at very good prices, join and witness the Revolution
          .cvr2(style='display:flex; align-items: baseline')
            a(href="/register-step1") 
              button(style='color: #4F46E5; margin-right:10px; background-color:white; border:1px solid #4F46E5') Join Us    
            a(href="/signin") 
              button(style='color: white;') Sign in      


